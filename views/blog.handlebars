<div class='text-center'>
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>Here's the comments: {{comment.comment_desc}}</p>
  <p>
    <a href='/'><button class='btn btn-primary'>Home</button></a>
  </p>
</div>
<div class='comment-blog-container'>
  <h2>
    Comment on this Blog
  </h2>
  <form class='comment-blog-form'>
    <label for='comment'>
      Comment:
    </label>
    <br />
    <textarea id='comment' name='comment' rows='5' cols='30'></textarea>
    <br />
    <button type='submit' value='Submit' data-id='{{blog.id}}'>
      Submit
    </button>
  </form>
</div>
<script src='./js/profile.js'></script>